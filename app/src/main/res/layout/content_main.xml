<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="helper.war3.pub.xiaomihelper.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btn_open_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开系统设置" />

    <TextView
        android:id="@+id/tv_phone_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="设置拨号卡" />
    <Button
        android:id="@+id/btn_phone_setting_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置拨号为1卡" />

    <Button
        android:id="@+id/btn_phone_setting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置拨号为2卡" />

    <TextView
        android:id="@+id/tv_network_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="设置上网卡" />
    <Button
        android:id="@+id/btn_network_setting_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置上网为1卡" />

    <Button
        android:id="@+id/btn_network_setting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置上网为2卡" />

</LinearLayout>
